{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel watch server",
    "watch": "webpack --watch --config webpack.config.js --mode development",
    "server": "nodemon --watch dist/bundle.js dist/bundle.js",
    "dev:built": "npm-run-all --parallel build start",
    "build": "NODE_ENV=production pnpm webpack --config webpack.config.js --mode production",
    "start": "wait-on dist/bundle.js && node --max-old-space-size=4096 dist/bundle.js",
    "lint": "pnpm eslint .",
    "lint:fix": "pnpm eslint . --fix",
    "clean": "rm -rf node_modules && rm -rf dist",
    "migrate": "cd src && pnpm sequelize-cli db:migrate",
    "upgrade:dependencies": "pnpm upgrade --latest"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "1.4.5-lts.2",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/body-parser": "^1.19.5",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@types/sequelize": "^4.28.20",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/parser": "^8.29.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.23.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1",
    "worker-plugin": "^5.0.1"
  }
}
