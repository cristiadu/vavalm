{
  "name": "@cristiadu/vavalm-api",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vavalm/vavalm.git"
  },
  "scripts": {
    "postinstall": "pnpm generate:spec && pnpm generate:routes && pnpm generate:client",
    "dev": "npm-run-all --parallel watch server",
    "watch": "webpack --watch --config webpack.config.js --mode development",
    "server": "nodemon --watch dist/bundle.js dist/bundle.js",
    "dev:built": "npm-run-all --parallel build start",
    "build": "NODE_ENV=production pnpm generate:routes && pnpm generate:client && pnpm webpack --config webpack.config.js --mode production",
    "start": "wait-on dist/bundle.js && node --max-old-space-size=4096 dist/bundle.js",
    "test": "vitest run",
    "check-health": "wait-on -t 60000 http://localhost:8000/api/health",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm eslint . --config  ./eslint.config.js",
    "lint:fix": "pnpm eslint . --config  ./eslint.config.js --fix",
    "clean": "rm -rf node_modules && rm -rf dist && rm -rf .turbo",
    "migrate": "cd src && pnpm sequelize-cli db:migrate",
    "upgrade:dependencies": "pnpm upgrade --latest",
    "generate:spec": "pnpm tsoa spec",
    "generate:routes": "pnpm tsoa routes",
    "generate:client": "pnpm openapi --input ./docs/openapi.yaml --output ./tests/generated/api --client fetch --name VavalMApi --indent 2"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.28.0",
    "@tsoa/runtime": "^6.6.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.30",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^1.4.0",
    "babel-loader": "^10.0.0",
    "domhandler": "^5.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.26.0",
    "ts-loader": "^9.5.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^1.4.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "worker-plugin": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
