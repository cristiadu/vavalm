{
  "name": "@cristiadu/vavalm-api",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vavalm/vavalm.git"
  },
  "scripts": {
    "postinstall": "pnpm generate:spec && pnpm generate:routes",
    "dev": "npm-run-all --parallel watch server",
    "watch": "webpack --watch --config webpack.config.js --mode development",
    "server": "nodemon --watch dist/bundle.js dist/bundle.js",
    "dev:built": "npm-run-all --parallel build start",
    "build": "NODE_ENV=production pnpm generate:routes && pnpm webpack --config webpack.config.js --mode production",
    "start": "wait-on dist/bundle.js && node --max-old-space-size=4096 dist/bundle.js",
    "lint": "pnpm dlx eslint .",
    "lint:fix": "pnpm dlx eslint . --fix",
    "clean": "rm -rf node_modules && rm -rf dist",
    "migrate": "cd src && pnpm sequelize-cli db:migrate",
    "upgrade:dependencies": "pnpm upgrade --latest",
    "generate:spec": "pnpm tsoa spec",
    "generate:routes": "pnpm tsoa routes"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "2.0.0",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@ts-rest/open-api": "^3.52.1",
    "@tsoa/runtime": "^6.6.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/sequelize": "^4.28.20",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/parser": "^8.32.1",
    "babel-loader": "^10.0.0",
    "domhandler": "^5.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsoa": "^6.6.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "worker-plugin": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
